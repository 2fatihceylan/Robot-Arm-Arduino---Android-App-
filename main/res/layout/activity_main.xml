<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewseekbar3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="150dp"></TextView>

            <SeekBar
                android:id="@+id/seekbar3"
                android:layout_width="250dp"
                android:scaleY="5"

                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                ></SeekBar>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/butontut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUT"></Button>

            <Button
                android:id="@+id/butonsifirla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIFIRLA"></Button>
            <Button
                android:id="@+id/butonyap1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yap1"></Button>
            <Button
                android:id="@+id/butonyap2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yap2"></Button>
            <Button
                android:id="@+id/butonyap3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yap3"></Button>
            <Button
                android:id="@+id/butonyap4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yap4"></Button>
            <Button
                android:id="@+id/butonyap5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yap5"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="172dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewseekbar"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="150dp"></TextView>

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:rotation="270"
                android:scaleY="5"></SeekBar>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewseekbar2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="150dp"></TextView>

            <SeekBar
                android:id="@+id/seekbar2"
                android:layout_width="250dp"
                android:scaleY="5"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:rotation="270"></SeekBar>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>